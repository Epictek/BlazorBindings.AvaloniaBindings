<RadioButton Value="Value" @bind-IsChecked="isChecked" @bind-GroupName="GroupName">
    <Template>
        <Label Foreground="@(isChecked == true ? Brushes.Green : Brushes.Red)" Text="@Value" />
    </Template>
</RadioButton>

@code
{
    [Parameter] public string Value { get; set; }
    [Parameter] public string GroupName { get; set; }

    bool? isChecked;
}
