<ContentControl OnTapped="OnTap"
             OnDoubleTapped="OnDoubleTap"
             >

    <Border @ref="_element" Background="Brushes.LightCyan" Padding="new(20)" Margin="new(4)" CornerRadius="new(7)">
        <ChildContent>
            <Label Foreground="Brushes.Black">@Item - @status</Label>
        </ChildContent>
    </Border>

</ContentControl>

@code {
[Parameter] public int Item { get; set; }
[Parameter] public EventCallback<int> OnRemoving { get; set; }

Border _element;
string status = "Pending";
double _lastX;

void OnTap() => status = "Tapped";
void OnDoubleTap() => status = "Double Tapped";

